@model OrbisTerrarum.ViewModels.eventCharactersDetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Events.EventId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Events.EventId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Events.WorldId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Events.WorldId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Events.EventName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Events.EventName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Events.EventDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Events.EventDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Events.EventResolved)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Events.EventResolved)
        </dd>
    </dl>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Characters.FirstOrDefault().CharacterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters.FirstOrDefault().CharacterDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters.FirstOrDefault().CharacterAge)
            </th>
        </tr>
        @foreach (var item in Model.Characters)
        {
            <tr>
                <td>
                    @Html.DisplayFor(ModelItem => item.CharacterName)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => item.CharacterDesc)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => item.CharacterAge)
                </td>
            </tr>
        }
    </table>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Events.EventId }) |
    @Html.ActionLink("Back to index", "Index", new { id = Model.Events.WorldId })
</div>
